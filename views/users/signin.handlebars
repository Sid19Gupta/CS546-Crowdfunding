<p>Sign In</p>
<div>
    <form action="/users/signin" method="POST">
    <label for="email">Email:</label>
    <input type="text" name="email" id = "email" class="full-width-input"/>
    <label for="password">Password:</label>
    <input type="password" name="password" id="password" class="full-width-input"/>
    <button type="submit">Sign In</button>
    </form>
    {{#if hasErrors}}
    <ul class="error-list">
    {{#each errors}}
    <li>
    {{this}}
    </li>
    {{/each}}
    </ul>
    {{/if}}
</div>
<a href="/users/register">Register</a>